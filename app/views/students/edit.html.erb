<div class="container-fluid">
  <h1>Edit Profile</h1>
  <hr>
  <%= render 'shared/student_error_messages' %>
  <%= form_for @student do |f| %>
    <%= f.label 'First Name:' %>
    <%= f.text_field :first_name %>
    <br>
    <%= f.label 'Last Name:' %>
    <%= f.text_field :last_name %>
    <br>
    <%= f.label 'Institution:' %>
    <%= f.text_field :institution %>
    <br>
    <%= f.label 'Discipline:' %>
    <%= f.text_field :discipline %>
    <br>
    <%= f.label 'School Of Study:' %>
    <%= f.text_field :school_of_study %>
    <br>
    <%= f.label 'Phone Number:' %>
    <%= f.text_field :phone_number %>
    <br>
    <div class="home-buttons">
      <%= f.submit 'Save', :class => "btn btn-lg btn-primary" %>
      <%= link_to 'Cancel', {controller: 'students', action: 'index'}, :class => "btn btn-lg btn-primary" %>
      <%= link_to 'Delete', {controller: 'students', action: 'destroy'}, :class => "btn btn-lg btn-primary" %>
    </div>
  <% end %>
</div>
