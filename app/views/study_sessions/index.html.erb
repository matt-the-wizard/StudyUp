<div class="container-fluid">
<h2>Study Sessions</h2>
<div class="header">
<%= form_tag( 'study_sessions/search', :method => :get, class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= date_field :search, params[:data], class: "span2", placeholder: "Search Study Session" %>
      <%= submit_tag("Search by date") %>
    </div>
  <% end %>
  <div class="home-buttons">
    <%= link_to 'New', { controller: 'study_sessions', action: 'new' }, :class => "btn btn-lg btn-primary", :style => 'float: left;' %>
  </div>
</div>
<table class="table">
  <thead>
    <th>Location</th>
    <th>Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th></th>
  </thead>
  <tbody>
    <% unless @study_sessions.empty? %>
      <% @study_sessions.each do |study_session| %>
        <tr>
          <td><%= study_session.location %></td>
          <td><%= study_session.day %></td>
          <td><%= study_session.start_time.strftime("%H:%M %P") %></td>
          <td><%= study_session.end_time.strftime("%H:%M %P") %></td>
          <td><%= link_to 'View', study_session %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan='5'>There are no study sessions available.</td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
